@{
}

@model BooksViewModel

<h1>My Online Bookstore</h1>

@foreach (Book p in Model.Books)
{
    <div class="card">
        <h3>@p.Title</h3>

        <ul>
            <li>Author: @p.Author</li>
            <li>Publisher: @p.Publisher</li>
            <li>ISBN: @p.Isbn</li>
            <li>Classification: @p.Classification</li>
            <li>Category: @p.Category</li>
            <li>Page count: @p.PageCount</li>
            <li>Price: @p.Price</li>
        </ul>
        <br />
    </div>
}

<div page-blah="@Model.PageInfo" page-action="Index"  class="btn page-link btn-outline-dark"></div>